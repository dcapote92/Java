package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Person;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		System.out.print("Quantas pessoas serão digitadas? ");
		Person[] persons = new Person[sc.nextInt()];
		for (int i = 0; i < persons.length; i++) {
			persons[i] = new Person();
			sc.nextLine();
			System.out.printf("Dados da %d° pessoa:%n", i + 1);
			System.out.print("Nome: ");
			persons[i].setName(sc.nextLine());
			System.out.print("Idade: ");
			persons[i].setAge(sc.nextByte());
			System.out.print("Altura: ");
			persons[i].setHeight(sc.nextFloat());
		}
		sc.close();
		float sum = 0f;
		int count = 0;
		for (int i = 0; i < persons.length; i++) {
			sum += persons[i].getHeight();
			if (persons[i].getAge() < 16) {
				count++;
			}
		}
		System.out.printf("%nAltura média: %.2f%n",sum/persons.length);
		System.out.printf("Pessoas com menos de 16 anos: %.1f%n",(float)((count*100f)/persons.length));
		for (int i = 0; i < persons.length; i++) {
			if (persons[i].getAge() < 16) {
				System.out.println(persons[i].getName());
			}
		}
	}

}
